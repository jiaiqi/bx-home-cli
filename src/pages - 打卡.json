  "subPackages": [{
      "root": "publicPages",
      "pages": [{
          "path": "accountExec/accountExec",
          "style": {
            "navigationBarTitleText": "登录",
            "navigationBarBackgroundColor": "#FFF",
            "navigationBarTextStyle": "black"
          }
        },

        {
          "path": "webviewPage/webviewPage"
        },
        {
          "path": "list2/list2",
          "style": {
            "navigationBarTitleText": "列表",
            "enablePullDownRefresh": true,
            "navigationBarTextStyle": "black",
            "navigationBarBackgroundColor": "#fff",
